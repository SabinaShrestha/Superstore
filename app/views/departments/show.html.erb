<h1>Department: <%= @department.name %></h1>

<% @department.items.each do |item| %>
  <%= item.name %>
  <br />
  <%= item.body %>
  <br />
  <%= link_to 'View', department_item_path(@department, item) %>
  <hr />
<% end %>

<%= link_to 'Edit', edit_department_path(@department) %>
<%= link_to 'Delete', department_path(@department), method: :delete %>
<%= link_to 'Add Item', new_department_item_path(@department) %>
